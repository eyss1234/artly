<div class="navbar navbar-artly navbar-light justify-content-between position-relative">
  <div class="container-fluid">
    <%= link_to art_pieces_path, class: "navbar-brand" do %>
      <%= image_tag "logo-for-navbar.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto position-absolute dropdown-format">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to art_pieces_path, class: "nav-link" do %>
              <i class="far fa-home-alt"></i>  Gallery
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to new_art_piece_path, class: "nav-link" do %>
              <i class="fas fa-plus"></i>  Art for Rent
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to user_path(current_user), class: "nav-link" do %>
              <i class="far fa-user"></i>  My Bookings & Art
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, class: "nav-link" do %>
              <i class="fas fa-sign-out"></i>  Log out
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
