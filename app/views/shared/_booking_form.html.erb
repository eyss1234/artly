<div class="container shadow p-3 bg-white text-primary mt-3">
  <%= simple_form_for(booking, url: @url, method: @verb, data: {controller: "datefield total-price"}) do |f| %>
    <p class="mt-3"style="text-align: right;"><strong>Total cost: Â£<%=@art_piece.cost_per_day %></strong></p>
    <%= f.input :start_date, as: :date, html5: true, input_html: { min: Date.today + 1, "data-action" => "input->datefield#update input->total-price#update", "data-datefield-target" => "startDate", "data-total-price-target" => "firstDate"} %>
    <%= f.input :end_date, as: :date, html5: true, input_html: { min: Date.today + 1, "data-action" => "input->total-price#update", "data-datefield-target" => "endDate", "data-total-price-target" => "secondDate"} %>
    <div class="text-end">
      <%= f.submit class: "btn btn-warning text-white" %>
    </div>
    <%= f.association :art_piece, as: :hidden %>
  <% end %>
</div>

