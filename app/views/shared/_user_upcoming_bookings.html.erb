<% @user.existing_bookings.each do |booking| %>
  <div class="booking-card-container .text-decoration-none" >
    <% if !booking.art_piece.photos.empty? %>
      <div><%= cl_image_tag booking.art_piece.photos.first.key, class: "card-img" %></div>
    <% else %>
      <div class="bg-dark text-light card-img"><em>No Photo</em></div>
    <% end %>
    <div class="booking-card-details">
      <h3> <%= booking.art_piece.name %> </h3>
      <p><strong>Start Date: </strong><%=booking.start_date.strftime('%d %B %Y')%></p>
      <p><strong>End Date: </strong><%=booking.end_date.strftime('%d %B %Y')%></p>
      <div class="booking-card-buttons">
        <%= link_to "Edit", edit_booking_path(booking), class: "btn btn-warning mt-3 text-white" %>
        <%= link_to "Delete", edit_booking_path(booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-warning mt-3" %>
      </div>
    </div>

  </div>
<% end %>


